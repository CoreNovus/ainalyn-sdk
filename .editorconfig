# =============================================================================
# Ainalyn SDK - EditorConfig
# =============================================================================
# This file defines editor settings for consistent coding styles across
# different editors and IDEs.
#
# For more info: https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Python files
# =============================================================================
[*.py]
indent_size = 4
max_line_length = 88

# =============================================================================
# Python stub files
# =============================================================================
[*.pyi]
indent_size = 4
max_line_length = 88

# =============================================================================
# YAML files
# =============================================================================
[*.{yml,yaml}]
indent_size = 2

# =============================================================================
# JSON files
# =============================================================================
[*.json]
indent_size = 2

# =============================================================================
# TOML files
# =============================================================================
[*.toml]
indent_size = 4

# =============================================================================
# Markdown files
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# reStructuredText files
# =============================================================================
[*.rst]
indent_size = 3
max_line_length = 79

# =============================================================================
# Shell scripts
# =============================================================================
[*.sh]
indent_size = 2

# =============================================================================
# Batch files (Windows)
# =============================================================================
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

# =============================================================================
# PowerShell scripts
# =============================================================================
[*.ps1]
indent_size = 4

# =============================================================================
# Makefiles
# =============================================================================
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# =============================================================================
# Rust files
# =============================================================================
[*.rs]
indent_size = 4
max_line_length = 100

# =============================================================================
# Cargo.toml (Rust package manifest)
# =============================================================================
[Cargo.toml]
indent_size = 4

# =============================================================================
# HTML/CSS/JavaScript (if any)
# =============================================================================
[*.{html,htm}]
indent_size = 2

[*.css]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

# =============================================================================
# Configuration files
# =============================================================================
[*.{ini,cfg}]
indent_size = 4

[.editorconfig]
indent_size = 4

# =============================================================================
# Git files
# =============================================================================
[.gitattributes]
indent_size = 4

[.gitignore]
indent_size = 4

# =============================================================================
# Docker files
# =============================================================================
[Dockerfile]
indent_size = 4

[docker-compose.yml]
indent_size = 2
